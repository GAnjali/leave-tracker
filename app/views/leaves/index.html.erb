<div id="page-content">
  <h1 class="text-center mt-4">Listing all leaves</h1>

  <div class="container">
    <% @leaves.each do |leave| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
<!--              by Gaddam Anjali-->
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to leave.user.username, leafe_path(leave), class: "text-success" %></h5>
              <p class="card-text"><%= leave.start_date %></p>
              <p class="card-text"><%= leave.end_date %></p>
              <%= link_to "View", leafe_path(leave), class: "btn btn-outline-success" %>
              <%= link_to "Edit", edit_leafe_path(leave), class: "btn btn-outline-info" %>
              <%= link_to "Delete", leafe_path(leave), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(leave.created_at) %> ago,
                edited <%= time_ago_in_words(leave.updated_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>