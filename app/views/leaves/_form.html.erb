<%= form_with model: leave do |form| %>
  <div>
    <%= form.label :start_date %><br>
    <%= form.text_field :start_date %>
    <% leave.errors.full_messages_for(:start_date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :end_date %><br>
    <%= form.text_area :end_date %><br>
    <% leave.errors.full_messages_for(:end_date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
